<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowListActivity"
    >

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_hint="Enter Vendor Name"
        />

    <ImageButton
        android:id="@+id/homeButtonID"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_here"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerShowListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:verticalScrollbarPosition="right"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/homeButtonID"
        app:layout_constraintVertical_bias="0.066" />

</android.support.constraint.ConstraintLayout>